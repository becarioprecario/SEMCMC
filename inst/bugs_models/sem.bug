model {

  #Response
  y[1:N] ~ dmnorm(mu[1:N,1], PREC[,])

  #Linear prediction term
  mu[1:N,1] <- X[,] %*% b[,]

  #I - lambda * W
  IlambdaW[1:N, 1:N] <- I[,] - lambda * W[,]
  
  #Build precision matrix for SAR error term
  PREC[1:N, 1:N] <- tau * t(IlambdaW)%*%IlambdaW

  for(i in 1:n.var) {
    b[i,1] ~ dnorm(0, 0.001)
  }

  tau ~ dgamma(.01, .01)
  lambda ~  dunif(lambda.min, lambda.max)

}
